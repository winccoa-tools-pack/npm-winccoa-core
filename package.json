{
  "name": "@winccoa-tools-pack/core-utils",
  "version": "0.1.0",
  "type": "module",
  "author": "winccoa-tools-pack",
  "license": "MIT",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc --build",
    "compile": "tsc --build",
    "prepublishOnly": "npm run build",
    "lint": "eslint \"src/**/*.ts\"",
    "lint:fix": "eslint \"src/**/*.ts\" --fix",
    "lint:md": "markdownlint \"**/*.md\" --ignore node_modules",
    "lint:md:fix": "markdownlint \"**/*.md\" --ignore node_modules --fix",
    
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "format:md": "prettier --write \"**/*.md\"",
    "format:md:check": "prettier --check \"**/*.md\"",
    "style-check": "npm run lint && npm run format:check && npm run lint:md && npm run format:md:check",
    "style-fix": "npm run lint:fix && npm run format && npm run lint:md:fix && npm run format:md",
    "test": "npm run style-check && npm run build && node test/core-utils.test.js",
    "test:integration": "npm run build && node .test/runTest.js",
    "ci:integration": "npm ci && npm run test:integration"
  },
  "devDependencies": {
    "@types/node": "^20.19.25",
    "@typescript-eslint/eslint-plugin": "^8.48.1",
    "@typescript-eslint/parser": "^8.48.1",
    "eslint": "^8.0.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.29.1",
    "markdownlint": "^0.28.0",
    "markdownlint-cli": "^0.33.0",
    "prettier": "^3.0.0",
    "typescript": "^5.2.0"
  }
}
